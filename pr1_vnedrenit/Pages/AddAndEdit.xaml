<Page x:Class="pr1_vnedrenit.Pages.AddAndEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr1_vnedrenit.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAndEdit">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="{Binding Title}" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <!-- Поля формы -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Тип партнера (ComboBox) -->
                <TextBlock Text="Тип партнера*:" Margin="0,5"/>
                <ComboBox x:Name="cmbTipPartnera" DisplayMemberPath="tip_partnera"
                          SelectedValuePath="id_tip_partnera1" SelectedValue="{Binding CurrentPartner.Id_tip_partnera}"
                          Margin="0,5"/>

                <!-- Наименование компании -->
                <TextBlock Text="Наименование компании*:" Margin="0,5"/>
                <TextBox x:Name="txtCompanyName" Text="{Binding CurrentPartner.naimenovanie_company, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5" MaxLength="50"/>

                <!-- ФИО директора -->
                <TextBlock Text="ФИО директора:" Margin="0,5"/>
                <TextBox x:Name="txtDirector" Text="{Binding CurrentPartner.fio_directora, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5" MaxLength="50"/>

                <!-- Юридический адрес -->
                <TextBlock Text="Юридический адрес:" Margin="0,5"/>
                <TextBox x:Name="txtAddress" Text="{Binding CurrentPartner.yuridichestkiy_adres, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5" MaxLength="200" AcceptsReturn="True" Height="60" VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"/>

                <!-- Рейтинг -->
                <TextBlock Text="Рейтинг*:" Margin="0,5"/>
                <TextBox x:Name="txtRating" Text="{Binding CurrentPartner.reyting, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5" PreviewTextInput="NumberValidationTextBox"/>
                <TextBlock Text="Целое неотрицательное число" FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                <!-- Телефон -->
                <TextBlock Text="Контактные данные (телефон):" Margin="0,5"/>
                <TextBox x:Name="txtPhone" Text="{Binding CurrentPartner.kontaktnie_dannie, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5" MaxLength="50"/>

                <!-- Email -->
                <TextBlock Text="Email:" Margin="0,5"/>
                <TextBox x:Name="txtEmail" Text="{Binding CurrentPartner.email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5" MaxLength="50"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Сохранить" Width="100" Margin="5,0" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Отмена" Width="100" Margin="5,0" Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
